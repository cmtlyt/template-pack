{
  "name": "template-pack",
  "type": "module",
  "version": "0.2.2",
  "packageManager": "pnpm@9.14.4",
  "description": "开箱即用的 npm 包模板",
  "author": {
    "name": "cmtlyt",
    "email": "cmtlyt@163.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/cmtlyt/template-pack#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cmtlyt/template-pack.git"
  },
  "bugs": {
    "url": "https://github.com/cmtlyt/template-pack/issues"
  },
  "keywords": [],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint . --fix",
    "stub": "unbuild --stub",
    "build": "unbuild",
    "test": "vitest",
    "test:ci": "vitest run",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "prepublishOnly": "pnpm lint && pnpm build && pnpm run changelog && pnpm test",
    "release": "bumpp",
    "ttmp": "pnpm i && esno ./scripts/transform-to-multiple-pack.ts && pnpm i && pnpm run lint && rm ./scripts/transform-to-multiple-pack.ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/node": "^22.10.2",
    "bumpp": "^9.9.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.17.0",
    "eslint-plugin-format": "^0.1.3",
    "esno": "^4.8.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "typescript": "^5.7.2",
    "unbuild": "^3.0.1",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix"
    ]
  }
}
